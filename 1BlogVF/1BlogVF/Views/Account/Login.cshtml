@model BaseViewModel<LoginViewModel>
@{
    ViewBag.Title = "Login";
}
@section Scripts{
    <script src="~/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobstrutive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row container center_div">
    <div class="col-md-4 col-md-offset-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="ObjView.UserName">Username</label>
                <input asp-for="ObjView.UserName" class="form-control" />
                <span asp-validation-for="ObjView.UserName" class="text-warning validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjView.Password">Password</label>
                <input asp-for="ObjView.Password" type="password" class="form-control" />
                <span asp-validation-for="ObjView.Password" class="text-warning validation"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="ObjView.RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="ObjView.RememberMe" class="form-check-label validation">Remember me?</label>
                </div>
                <span asp-validation-for="ObjView.RememberMe" class="text-warning validation"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>